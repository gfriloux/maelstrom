struct Ident
{
   time created_at;
   boolean favorited;
   Geo geo;
   int id;
   string in_reply_to_screen_name;
   int in_reply_to_status_id;
   int in_reply_to_user_id;
   string source;
   string statusnet_html;
   string text;
